<div class="author">
  <h1 class="author__heading"><strong>QTutor</strong></h1>
  <p class="author__body">Qualified Tutors from <strong><i>BUET | DU | Medical | Cadet</i></strong></p>
</div>


<section class="articles">
  <h2 class="articles__heading">
    <strong>Find Best Tutor</strong>
    <form action="/filter-tutors" method="GET" style="display: flex;">
      <span style="margin-right: 10px;">
        <select name="tag" id="tagFilter" style="width: 200px; height: 64px">
          <option value="all">All</option>
          <option value="buet">BUET</option>
          <option value="du">DU</option>
          <option value="medical">Medical</option>
          <option value="cadet">Cadet</option>
        </select>
      </span>
      <input type="submit" value="Filter" style="width: 150px; height: 64px;">
    </form>
  </h2>

  <% data.forEach(tutor=> { %>
    <div class="tutordiv">
      <h3>
        <span style="color: blueviolet; font-size: 1em;">
          <%= tutor.id %>
        </span> |
        <span style="color: red; font-size: 1em;">
          <%= tutor.tag %>
        </span>
      </h3>
      <p><strong>Name:</strong>
        <%= tutor.name %>
      </p>
      <p><strong>Institution:</strong>
        <%= tutor.institution %>
      </p>
      <p><strong>Department:</strong>
        <%= tutor.dept %>
      </p>
      <p><strong>HSC Batch:</strong>
        <%= tutor.hsc %>
      </p>
      <p><strong>Background:</strong>
        <%= tutor.background %>
      </p>
      <p><strong>College:</strong>
        <%= tutor.college %>
      </p>
      <p><strong>Expertise:</strong>
        <%= tutor.expertise %>
      </p>
      <p><strong>Mode:</strong>
        <%= tutor.mode %>
      </p>
      <p><strong>QTutor Rating(10):</strong>
        <%= tutor.rating %>
      </p>
    </div>
    <% }) %>


</section>