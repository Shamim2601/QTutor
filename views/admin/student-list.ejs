<div class="admin-title">
  <h2>Tutions</h2>
  <a href="/add-student" class="button">+ Add New Student</a>
</div>

<table class="admin-students">
  <thead>
    <tr>
      <th>Name</th>
      <th>Inst</th>
      <th>Class</th>
      <th>Call</th>
      <th>Tutor</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach(student=> { %>
      <tr>
        <td>
          <%= student.name %>
        </td>
        <td>
          <%= student.institution %>
        </td>
        <td>
          <%= student.class %>
        </td>
        <td>
          <a href="tel:<%= student.phone %>" style="text-decoration: none;">ðŸ“ž</a>
        </td>
        <td>
          <%= student.tutor %>
        </td>
        <td>
          <form action="/delete-student/<%= student._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Del" class="btn-delete btn">
          </form>
        </td>
      </tr>
      <% }) %>
  </tbody>
</table>