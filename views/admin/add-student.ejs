<div class="admin-title">
  <h2>Add New Student</h2>
</div>

<form action="/add-student" method="POST" onsubmit="return validateForm()">

  <label for="name"><b>Name</b></label>
  <input type="text" placeholder="Student Name" name="name" required>

  <label for="institution"><b>Institution</b></label>
  <input type="text" placeholder="BNMPC" name="institution" required>

  <label for="class"><b>Class</b></label>
  <input type="text" placeholder="11" name="class" required>

  <label for="phone"><b>Phone Number</b></label>
  <input type="text" placeholder="11 digit phone number" name="phone" pattern="\d{11}" title="Please enter 11 digits numeric phone number" required>

  <input type="submit" value="Add" class="btn">

</form>

<script>
  function validateForm() {
    var phoneInput = document.forms["addStudentForm"]["phone"].value;
    if (!/\d{11}/.test(phoneInput)) {
      alert("Please enter a 11-digit numeric phone number");
      return false;
    }
    return true;
  }
</script>